CREATE TABLE Organizations(
organization_id int PRIMARY KEY,
parent_organization_id int
organization_name char[50],
);

INSERT INTO Organizations
VALUES(1, 1, "TCS");

INSERT INTO Organizations
VALUES(2, 1,  "TPS");

INSERT INTO Organizations
VALUES(3, 1, "TKS");

INSERT INTO Organizations
VALUES(4, 2, "TM");

INSERT INTO Organizations
